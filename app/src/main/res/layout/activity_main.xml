<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Hello World!"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintLeft_toLeftOf="parent"-->
<!--        app:layout_constraintRight_toRightOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent" />-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="370dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="200dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tvState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="60dp"
                    android:text="Login"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_toRightOf="@+id/tvState"
                    android:gravity="center_horizontal"
                    android:text="with your phone number"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <EditText
                   android:id="@+id/etNumber"
                    android:layout_centerHorizontal="true"
                    android:layout_width="340dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/tvCont"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/ghetto"
                    android:drawableStart="@drawable/flag1"
                    android:drawableLeft="@drawable/flag1"
                    android:drawableEnd="@drawable/ic_baseline_cancel"
                    android:drawableRight="@drawable/ic_baseline_cancel"
                    android:textColor="@color/black"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" />

<!--                <Spinner-->
<!--                    android:id="@+id/cities_spinner"-->
<!--                    android:layout_below="@+id/"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:background="@drawable/ggg"-->
<!--                    android:layout_height="wrap_content" />-->

                <Button
                    android:id="@+id/loginBtn"
                    android:layout_width="310dp"
                    android:layout_height="60dp"
                    android:layout_below="@id/tvCont"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="131dp"
                    android:background="@drawable/button"
                    android:text="LOGIN"
                    android:textColor="@color/mustard"
                    android:textSize="30sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>